@model TuncayAlbayrakMvcSinav.Models.ViewModels.Film.FilmGuncelle_VM

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>FilmGuncelle_VM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Ad" class="control-label"></label>
                <input asp-for="Ad" class="form-control" />
                <span asp-validation-for="Ad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sure" class="control-label"></label>
                <input asp-for="Sure" class="form-control" />
                <span asp-validation-for="Sure" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ulke" class="control-label"></label>
                <input asp-for="Ulke" class="form-control" />
                <span asp-validation-for="Ulke" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YapimYili" class="control-label"></label>
                <input asp-for="YapimYili" class="form-control" />
                <span asp-validation-for="YapimYili" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Oyuncular</label>
                @foreach (var kategori in Model.TumOyuncular)
                {
                    <div class="form-check">
                        <input type="checkbox"
                               class="form-check-input"
                               name="SelectedOyuncuIds"
                               value="@kategori.OyuncuId"
                               id="oyuncu_@kategori.OyuncuId"
                               @(Model.SelectedOyuncuIds.Contains(kategori.OyuncuId) ? "checked" : "") />
                        <label class="form-check-label" for="kategori_@kategori.OyuncuId">
                            @kategori.Ad
                        </label>
                    </div>
                }
            </div>


            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
